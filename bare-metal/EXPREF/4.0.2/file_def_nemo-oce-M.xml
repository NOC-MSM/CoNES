        </file>

        <file id="file23" name_suffix="_grid_V" description="ocean V grid variables" enabled=".TRUE." >
          <field field_ref="voce"           name="voce"  enabled=".TRUE." />
          <field field_ref="voce_e3v"           name="voce_e3v"  enabled=".TRUE." />
          <field field_ref="e3v"           name="e3v"  enabled=".TRUE." />
        </file>

      </file_group>

      <file_group id="3d" output_freq="3d"  output_level="10" enabled=".TRUE."/> <!-- 3d files -->    

      <file_group id="5d" output_freq="5d"  output_level="10" enabled=".TRUE."/>  <!-- 5d files -->   

      <file_group id="1m" output_freq="1mo" output_level="10" enabled=".TRUE."> <!-- real 2m files -->
        <file id="file31" name_suffix="_grid_T" description="ocean T grid variables" enabled=".TRUE." >
