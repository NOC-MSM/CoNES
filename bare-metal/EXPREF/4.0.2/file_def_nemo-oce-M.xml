    <file_definition type="multiple_file" name="@expname@_@freq@_@startdate@_@enddate@" sync_freq="1d" min_digits="4">
    
      <file_group id="1ts" output_freq="1ts"  output_level="10" enabled=".TRUE."/> <!-- 1 time step files -->
      <file_group id="1h" output_freq="1h"  output_level="10" enabled=".TRUE."/>                      
      <file_group id="2h" output_freq="2h"  output_level="10" enabled=".TRUE."/> <!-- 2h files -->
      <file_group id="3h" output_freq="3h"  output_level="10" enabled=".TRUE."/> <!-- 3h files -->     
      <file_group id="4h" output_freq="4h"  output_level="10" enabled=".TRUE."/> <!-- 4h files -->
      <file_group id="6h" output_freq="6h"  output_level="10" enabled=".FALSE."> <!-- 6h files -->

        <file id="file1" name_suffix="_grid_T" description="ocean T grid variables" enabled=".FALSE." >
          <field field_ref="toce"           name="toce"   operation="instant" enabled=".TRUE." />
          <field field_ref="soce"           name="soce"   operation="instant" enabled=".TRUE." />
          <field field_ref="toce_e3t"           name="toce_e3t"  enabled=".TRUE." />
          <field field_ref="soce_e3t"           name="soce_e3t"  enabled=".TRUE." />
          <field field_ref="e3t"           name="e3t"  enabled=".TRUE." />
        </file>

        <file id="file2" name_suffix="_grid_U" description="ocean U grid variables" enabled=".FALSE." >
          <field field_ref="uoce"           name="uoce"  enabled=".TRUE." />
          <field field_ref="uoce_e3u"           name="uoce_e3u"  enabled=".TRUE." />
          <field field_ref="e3u"           name="e3u"  enabled=".TRUE." />
        </file>

        <file id="file3" name_suffix="_grid_V" description="ocean V grid variables" enabled=".FALSE." >
          <field field_ref="voce"           name="voce"  enabled=".TRUE." />
          <field field_ref="voce_e3v"           name="voce_e3v"  enabled=".TRUE." />
          <field field_ref="e3v"           name="e3v"  enabled=".TRUE." />
        </file>

      </file_group>

      <file_group id="25h_mean" output_freq="1d" output_level="10" enabled=".TRUE."/>
     
      <file_group id="1d" output_freq="1d"  output_level="10" enabled=".TRUE."> <!-- 1d files -->

        <file id="file21" name_suffix="_grid_T" description="ocean T grid variables" enabled=".TRUE." >
